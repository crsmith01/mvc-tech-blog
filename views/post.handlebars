{{> post-info post}}
{{!-- Users can only see these posts if logged in --}}
{{#if logged_in}}
<div class="jumbotron">
  <h1 class="display-4">{{post.title}}</h1>
  <p class="lead">Posted by {{user.username}} on {{format_date date_created}}</p>
  <p>{{post.content}}</p>
  <hr class="my-4">
  <div id="comments">
      {{#each post.comments as |comment|}}
      <p> {{comment.content}} </p>
      {{/each}}
  </div>  
  <a class="btn btn-primary btn-lg" href="/comments" role="button">Leave a Comment!</a>
</div>
{{/if}}



{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}

