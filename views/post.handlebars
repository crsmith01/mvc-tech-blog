<div class="jumbotron">
  <h1 class="display-4">{{post.title}}</h1>
  <p class="lead">Posted by {{user.username}} on {{format_date date_created}}</p>
  <p>{{post.content}}</p>
  <hr class="my-4">
  <div id="comments">
      {{#each bp.comments as |comment|}}
      <p> {{comment.content}} </p>
      {{/each}}
  </div>  
  <a class="btn btn-primary btn-lg" href="#" role="button">Leave a Comment</a>
</div>

