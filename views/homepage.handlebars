<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}
    <div class="blogPost col-md-12">
        <a href='/post/{{post.id}}'>
            <div class="card">
            <div class="card-body">
                <h2>{{post.title}}</h2>
                <h5 class="card-subtitle text-muted">Posted by {{post.user.username}} on {{format_date post.date_created}}</h5>
                <p class="card-text">{{post.content}}</p>   
            </div>
            </div>
        </a>
    </div>
{{/each}}
