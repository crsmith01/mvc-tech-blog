<!-- Loop over each object in the posts array -->
{{#each posts as |post|}}
    <div class="post col-md-12">
        <a href='/posts/{{post.id}}'>
            <div class="card">
            <div class="card-body bg-danger text-center">
                <h2 class="p-3 mb-2 bg-light text-dark">{{post.title}}</h2>
                <h3 class="card-text">{{post.content}}</h3>   
                <h5 class="card-subtitle text-muted">Posted by {{post.user.username}} on {{format_date post.date_created}}</h5>

            </div>
            </div>
        </a>
    </div>
    <br>
    <br>
    <br>
{{/each}}
