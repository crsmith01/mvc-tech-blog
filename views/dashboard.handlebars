<h2>Dashboard</h2>
{{#if posts.length}}
<section>
   <h3>Your Posts</h3>
   <div>
      <ol>
      {{#each posts as |post|}}
         <li>
            {{ post-info post }}
            <button class="edit">
               <a href="/dashboard/edit/{{post.id}}">Edit Post</a>
            </button>
         </li>
      {{/each}}
      </ol>
   </div>
</section>
{{/if}}


<section>
   <h2>Create a New Post!</h2>

   <form class="new-post-form">
      <div>
         <label for="post-title">Title</label>
         <input type="text" id="post-title" placeholder="Please enter post title here" name="post-title" />
      </div>
      <div>
         <label for="post-url">Content</label>
         <input type="text" id="post-url" placeholder="Please enter post content here" name="post-url" />
      </div>
      <button type="submit" class="btn">Create</button>
   </form>
</section>

<script src="/js/add-post.js"></script>

