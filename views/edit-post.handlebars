<section>
  <h2 class="title mt-5">Edit Post</h2>
  <hr>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Post Title:</label>
      <input class="input" id="post-title" name="post-title" type="text" value="{{ post.title }}" />
    </div>
    <div>
      <label for="post-content">Post Content: {{post.content}}</label>
      {{!-- see which way works better --}}
      <input class="textarea" name="content" type="text" value="{{ post.content }}" />
    </div>
    <div>
      You created this post on {{ format_date post.date_created }}.
      <a href="/post/{{post.id}}">{{ post.comments.length}} {{ format_plural "comment" post.comments.length }}</a>
    </div>
    <button type="submit" class="button btn-success save-post-btn">Save Post</button>
    <button type="button" class="button btn-danger delete-post-btn">Delete Post</button>
  </form>
</section>

<section>
  <div class="comments">
    {{#each comments as |comment|}}
    <section class="comment">
      <div class="meta">
        {{user.username}} on {{format_date date_created}}
      </div>
      <div class="text">
        {{comment.content}}
      </div>
    </section>
    {{/each}}
  </div>
</section>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>